<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ChiTietdulich">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarchitietdulich"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/custom_toolbar"
        app:title="Thông tin"
        app:titleTextColor="@color/design_default_color_primary">

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:background="#E5E6E6"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageviewchitietdulich"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
        />
        <TextView
            android:id="@+id/textviewtendiadiemchitiet"
            android:text="Tên Địa Điểm"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#111113"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/cc"
                android:layout_marginLeft="20dp"
                android:background="@drawable/icon"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:id="@+id/textviewdiachichitiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="100dp"
                android:text="Địa Chỉ"
                android:textSize="20dp"
                android:textStyle="italic" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:text="Mô tả chi tiết: "
            android:layout_margin="5dp"
            android:textStyle="italic"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            <CheckBox
                android:id="@+id/cblike"
                android:layout_marginLeft="20dp"
                android:button="@drawable/custom_like"
                android:layout_width="100dp"
                android:layout_height="80dp"/>
            <CheckBox
                android:id="@+id/cbdislike"
                android:layout_marginLeft="20dp"
                android:button="@drawable/custom_dislike"
                android:layout_width="100dp"
                android:layout_height="80dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="#E7EAEA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18dp"
                android:layout_margin="5dp"
                android:paddingBottom="10dp"
                android:id="@+id/textviewmotachitiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </ScrollView>
    </LinearLayout>

</LinearLayout>